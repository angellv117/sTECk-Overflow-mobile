<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".A_MainActivity"
    android:background="#505050"
    android:orientation="vertical"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="25dp"
        android:elevation="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        app:cardBackgroundColor="#717171"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Olvidaste tu contraseña?\nDijita tu Correo para crear una nueva contraseña"
                android:textColor="@color/white"
                android:textSize="16sp"/>
            <LinearLayout
                android:id="@+id/singuplayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="25dp">


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:hint="Correo o nombre de usuario"
                    app:boxStrokeColor="@color/white"
                    app:boxStrokeWidth="1dp"
                    app:shapeAppearance="@style/Bonon4">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCorreoOlvidar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:textStyle="normal" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/BOlvidarP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="25dp"
                    android:backgroundTint="@color/pickColor"
                    android:elevation="15dp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="Enviar"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    app:cornerRadius="25dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>